    <%#= fb_connect_javascript_tag %>
    <%#= init_fb_connect "XFBML" %>
            
    <div id="container">
      <div id="header">
          <span><%= link_to 'All times Best', sayings_path %> | <%= link_to 'Add saying', new_sayings_path %> </span>

          <p style="color: green"><%= flash[:notice] %></p>
      </div>
      <div id="content" style="margin: 0px auto; width:750px; text-align:center">
        <%= yield -%>
      </div>
      <div id="sidebar"></div>
      </div>
